{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Restore Ruff venv",
      "type": "shell",
      "command": "uv",
      "args": ["sync"]
    },
    {
      "label": "Run check-phat-nguoi",
      "type": "shell",
      "command": "uv",
      "args": ["run", "check-phat-nguoi"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$python"]
    },
    {
      "label": "Run generate-schemas",
      "type": "shell",
      "command": "uv",
      "args": ["run", "generate-schemas"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$python"]
    }
  ]
}
